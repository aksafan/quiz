<form class="max-w-[450px] mx-auto mt-8 w-full" method="POST"
      action="/admin/difficulties<%= (difficulty && !difficulty.isNew) ? "/" + difficulty._id : "" %>">
    <div class="flex flex-col mb-2 text-sm">
        <label for="level">Difficulty Level:</label>
        <select name="level" id="level" required class="p-2 pl-0 border border-neutral-400 rounded-md">
            <% const difficultyLevels = ['Easy', 'Medium', 'Hard']; %>
            <% difficultyLevels.forEach(level => { %>
                <option value="<%= level %>" <%= difficulty && difficulty.level === level ? 'selected' : "" %>>
                    <%= level %>
                </option>
            <% }) %>
        </select>
    </div>
    <div class="flex flex-col mb-2 text-sm">
        <label for="pointMultiplier">Point Multiplier:</label>
        <input class="text-indigo-900 border p-2 border-neutral-400 rounded-md"
               type="number" name="pointMultiplier" id="pointMultiplier"
               value="<%= difficulty ? difficulty.pointMultiplier : "" %>"
               required>
    </div>

    <input type="hidden" name="_csrf" value="<%= _csrf %>"/>

    <button type="submit"
            class="px-8 py-2 block rounded-md bg-indigo-700 text-white text-base  mx-auto shadow-md hover:shadow-lg hover:bg-indigo-800"><%= (difficulty && !difficulty.isNew) ? "Update Difficulty" : "Create Difficulty" %></button>
</form>
