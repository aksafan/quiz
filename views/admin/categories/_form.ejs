<form class="max-w-[450px] mx-auto mt-8 w-full" method="POST"
      action="/admin/categories<%= (category && !category.isNew) ? "/" + category._id : "" %>">
    <div class="flex flex-col mb-2 text-sm">
        <label for="categoryName">Category Name:</label>
        <input class="text-indigo-900 border p-2 border-neutral-400 rounded-md"
               type="text"
               name="name"
               id="categoryName" value="<%= category ? category.name : "" %>"
               required>
    </div>

    <input type="hidden" name="_csrf" value="<%= _csrf %>"/>

    <button type="submit"
            class="px-8 py-2 block rounded-md bg-indigo-700 text-white text-base  mx-auto shadow-md hover:shadow-lg hover:bg-indigo-800"><%= (category && !category.isNew) ? "Update Category" : "Create Category" %></button>
</form>
