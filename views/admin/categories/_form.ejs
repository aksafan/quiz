<form method="POST" action="/admin/categories<%= (category && !category.isNew) ? "/" + category._id : "" %>">
    <div class="fields">
        <label for="categoryName">Category Name:</label>
        <input type="text" name="name" id="categoryName" value="<%= category ? category.name : "" %>"
               required>
    </div>

    <input type="hidden" name="_csrf" value="<%= _csrf %>"/>

    <button type="submit"><%= (category && !category.isNew) ? "Update Category" : "Create Category" %></button>
</form>
